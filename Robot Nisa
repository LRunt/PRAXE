#include <stdio.h>
#include <conio.h>
#include <dos.h>

int PORTA=0x301;   //Nadefinov nˇ port… a promŘněch
int PORTB=0x300;
int stisk;
int a =0;
int mask;
int zakladna=0;
int hlrameno=0;
int rameno=0;
int chnapka=0;

void main()
{
do             //Nastavenˇ z kladny do nulov‚ho bodu(IR z vora z klady)
{
mask=0x1;
zakladna=inportb(PORTB); //Naźˇt m data
zakladna=zakladna&mask;  //Maskuji ostatnˇ bity
outportb(PORTA,0x6E);    //Zapˇn m motor z kladny
printf("Probˇh  nastavov nˇ nulov‚ho bodu z kladny\n");
}while(zakladna!=0);     //kdy§ je z kladna na z voýe, pýestane se nastavovat nulově bod
outportb(PORTA,0xFF);    //Vypˇn m motory
do
{
mask=0x2;
hlrameno=inportb(PORTB); //Naźˇt m data
hlrameno=hlrameno&mask;  //Maskuji ostatnˇ bity
outportb(PORTA,0x6D);    //Zapˇn m motor hlramena
printf("Probˇh  nastavov nˇ nulov‚ho bodu hlavnˇho ramena\n");
}while(hlrameno!=0);     //kdy§ je hlrameno na z voýe, pýestane se nastavovat nulově bod
outportb(PORTA,0xFF);    //Vypˇn m motory
do
{
mask=0x4;
rameno=inportb(PORTB);  //Naźˇt m data
rameno=rameno&mask;     //Maskuji ostatnˇ bity
outportb(PORTA,0x7B);   //Zapˇn m motor ramena
printf("Probˇh  nastavov nˇ nulov‚ polohy ramena s chĺapkou");
}while(rameno!=0);      //Kdy§ je rameno na z voýe, pýestane se nastavovat nulově bod
outportb(PORTA,0xFF);   //Vypˇn m motory
do
{
mask=0x08;
chnapka=inport(PORTB);  //Naźˇt m data
chnapka=chnapka&mask;   //Maskuji ostatnˇ bity
outportb(PORTA,0x67);   //Zapˇn m motor chĺapky
printf("Probˇh  nastavov nˇ nulov‚ polohy chĺapky");
}while(chnapka!=0);     //Kdy§ je chĺapka na z voýe, pýestane se nastavovat nulově bod
outportb(PORTA,0xFF);   //Vypˇn m motory
clrscr();
printf("Ovl d nˇ:\n");
printf("Ot źenˇ z kladny: a-doleva d-doprava\n");
printf("Pohybov nˇ hlavnˇm ramenem: w-nahoru s-dolu\n");
printf("Pohybov nˇ ramenem s chĺapkou: r-nahoru f-dolu\n");
printf("Ovl d nˇ chĺapky: q-k sobŘ e-od sebe\n\n");
printf("Tlaźˇtko ESC zavýe program\n");
do
{
if(kbhit)         //nastavuji aby stisk reagoval na zm źnutˇ kl ves
{
stisk=getch();
}
if(stisk==0)     //Kdy§ nenˇ stlaźeno § dn‚ tlaźˇtko vypˇn m motory
{
outportb(PORTA,0xFF);
}
if(stisk==97)    //a - ot źenˇ z klady doleva
{
if(zakladna==0)  //Kdy§ je z kladna na z voýe nezapˇn m motory
{
printf("Bylo dasa§eno koncov‚ polohy z kladny\n");
outportb(PORTA,0xFF);
stisk=0;
}
else             //kdy§ nenˇ z kladna na z voýe zapˇn m motory
{
printf("Z kladna se pohybuje vlevo\n");
zakladna=zakladna-1;
outportb(PORTA,0xEE);
stisk=0;
}
}break;
if(stisk==100)   //d- ot źenˇ z kladny doprava
{
if(zakladna==400)  //nastavil jsem druhě koncově bod na 400
{
outportb(PORTA,0xFF);
printf("Bylo dosa§eno koncov‚ polohy z kladny\n");
stisk=0;
}
else               //kdy§ nenˇ z kladna na koncov‚m bodu zapˇn m motory
{
printf("Z kladna se pohybuje vpravo\n");
outportb(PORTA,0xFE);
zakladna=zakladna+1;
stisk=0;
}
}break;
if(stisk==119)     //w- hlrameno nahoru
{
if(hlrameno==0)   //kdy§ je hlrameno na z voýe nezapˇn m motory
{
printf("Bylo dosa§eno koncov‚ polohy hlavnˇho ramena\n");
outportb(PORTA,0xFF);
stisk=0;
}
else              //kdy§ nenˇ z kladna na z voýe zapˇn m motory
{
printf("Hlavnˇ rameno se pohybuje nahoru\n");
stisk=0;
hlrameno=hlrameno-1;
outportb(PORTA,0xED);
}
}break;
if(stisk==115)     //s - hlrameno dolu
{
if(hlrameno==400)   //druhou z voru jem nastavil na 400
{
printf("Bylo dosa§eno koncov‚ polohy hlavnˇho ramena\n");
outportb(PORTA,0xFF);
stisk=0;
}
else            //kdy§ nenˇ hlrameno na koncov‚m bodu zapˇn m motory
{
hlrameno=hlrameno+1;
printf("Hlavnˇ rameno se pohybuje dolu\n");
outportb(PORTA,0xFD);
stisk=0;
}
}break;
if(stisk==114)    //r- rameno s chĺapkou nahoru
{
if(rameno==0)    //kdy§ je rameno na z voýe nezapˇn m motory
{
printf("Bylo dosa§eno koncov‚ polohy ramena s chĺapkou\n");
outportb(PORTA,0xFF);
stisk=0;
}
else            //kdy§ nenˇ rameno na z kladnŘ zapˇn m motory
{
printf("Rameno s chĺapkou se pohybuje nahoru\n");
rameno=rameno-1;
outportb(PORTA,0xFB);
stisk=0;
}
}break;
if(stisk==102)     //f- rameno s chĺapkou dolu
{
if(rameno==400)    //nastavuji 2. z voru na 400
{
printf("Dosa§eno koncov‚ polohy ramena s chĺapkou\n");
outportb(PORTA,0xFF);
stisk=0;
}
else              //kdy§ nenˇ rameno na koncov‚m bodu zapˇn m motory
{
printf("Rameno s chĺapkou se pohybuje dolu\n");
rameno=rameno+1;
outportb(PORTA,0xEB);
stisk=0;
}
}break;
if(stisk==113)         //q- chĺapka od sebe
{
if(chnapka==400)      //Nastavuji 2. z voru na 400
{
printf("Dosa§ena konsov  poloha chĺapky\n");
outportb(PORTA,0xFF);
stisk=0;
}
else               //Kdy§ chĺapka nenˇ na z voýe zapˇn m motory
{
printf("Chĺapka se pohybuje k sobŘ\n");
chnapka=chnapka+1;
outportb(PORTA,0xF7);
stisk=0;
}
}break;
if(stisk==101)           //e- chĺapka od sebe
{
if(chnapka==0)
{
printf("Dosa§ena koncov  poloha chnapky\n");
outportb(PORTA,0xFF);
stisk=0;
}
else                //Kdy§ nenˇ chĺapka na koncov‚ poloze vypˇn m motory
{
printf("Chĺapka se pohybuje od sebe\n");
chnapka=chnapka-1;
outportb(PORTA,0xE7);
stisk=0;
}
}break;
if(stisk==27) //Konec programu pýi stisku ESC
{
a=a+1;        //Aby byla poruçena podmˇnka a byl ukonźen program
}
}while(a==0);
}
